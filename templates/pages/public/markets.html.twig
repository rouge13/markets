{% extends 'pages/public/base.html.twig' %}
{% block title %}
Rechercher un marché
{% endblock %}


{% block body %}
    <h2>Recherches</h2>

    {{ form(searchMarketForm) }}

    {% if app.request.method == 'POST' %}
        {% if markets |length > 0 %}

            {% for market in markets %}
                <p>Nom: {{ market.name }}</p>
            {% endfor %}

            {% else %}
            <p>Aucun résultat(s) pour votre recherche</p>
        {% endif  %}
    {% endif %}

{% endblock %}