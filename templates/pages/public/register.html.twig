{% extends '/pages/public/base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <div class="row justify-content-center p-5">
        <div class="col-md-6">
            {{ form_start(registerForm) }}

            <div class="card">

                <div class="card-header">
                    <h4 class="card-title mt-2">S'enregistrer</h4>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        <label>Pseudo</label>
                        <p>{{ form_widget(registerForm.alias) }}</p>
                    </div>

                    <div class="form-group">
                        <label>Région</label>
                        <p>{{ form_widget(registerForm.region) }}</p>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        {{ form_widget(registerForm.email) }}
                    </div>


                    <div class="form-group">

                        {{ form_widget(registerForm.password) }}

                    </div>

                    <div class="form-group">
                        {{ form_widget(registerForm.enregistrer) }}
                    </div>
                </div>

            </div>
            <div class=" card-body text-center">Déjà un compte? <a href="{{ path('app_login') }}">Se connecter</a></div>

        </div>
    </div>


    {{ form_end(registerForm) }}


{% endblock %}