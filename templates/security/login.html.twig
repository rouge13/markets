{% extends '/pages/public/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
 <div class="row justify-content-center p-5">
        <div class="col-md-6">
            <div class="card">
                <header class="card-header">
                    <h4 class="card-title mt-2">Se connecter</h4>
                </header>

                <div class="card-body">

                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connecté(e) avec {{ app.user.username }}, <a href="{{ path('app_logout') }}"> se déconnecter</a>
                            </div>
                        {% endif %}


                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        </div>


                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                            <small class="text-muted"> <a href="#">Mot de passe oublié ? </a></small>
                        </div>


                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="">Se souvenir de moi
                                    </label>
                                </div>


                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Connexion</button>
                        </div>


                    </form>

                </div>

                <div class="border-top card-body text-center">Pas encore membre ?
                    <small><a href="#">Rejoindre la communauté</a></small>
                </div>
            </div>
        </div>



    </div>

{% endblock %}
